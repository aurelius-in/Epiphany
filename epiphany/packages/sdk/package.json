{
  "name": "@epiphany/sdk",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aurelius-in/Epiphany.git",
    "directory": "epiphany/packages/sdk"
  },
  "homepage": "https://github.com/aurelius-in/Epiphany#readme",
  "bugs": {
    "url": "https://github.com/aurelius-in/Epiphany/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --splitting false",
    "dev": "tsup src/index.ts --watch"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.5.3"
  }
